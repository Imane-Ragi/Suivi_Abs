@model IEnumerable<Suivi_Abs.Models.Filiere>

@{
    ViewData["Title"] = "Index";
  
}

<h1  style="text-align:center">Filieres</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nFiliere)
            </th>
            <th>
                <a asp-action="AddorEdit" class="btn btn-outline-success"> <i class="far fa-plus-square"></i>Filière</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nFiliere)
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@item.id_F"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.id_F" class="text-danger ml-1" onclick="return confirm('vous risquez de supprimer toutes les infos liées à cette Filiere')"><i class="fa fa-trash-alt fa-lg"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
